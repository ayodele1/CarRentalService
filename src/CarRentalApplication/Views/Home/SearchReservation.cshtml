@{
}

<div class="row">
    <h3 class="pageHeading col-md-offset-1">UPDATE / CANCEL RESERVATION</h3>
    <br />
    <form role="form" asp-controller="Home" asp-action="SearchReservation" id="searchReservationForm" class="form-horizontal">
        <fieldset class="col-md-8 col-md-offset-1">
            <div asp-validation-summary="ModelOnly" class="text-danger text-lg-center"></div>
            <div class="form-group form-group-lg">
                <label class="col-lg-2 control-label">Email</label>
                <div class="col-lg-7">
                    <input type="email" class="form-control input input-lg" asp-for="Email" style="width:100%" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-group-lg">
                <label class="col-lg-2 control-label">Confirmation Number</label>
                <div class="col-lg-7">
                    <input type="text" class="form-control input input-lg" asp-for="ConfirmationNumber" style="width:100%;" />
                    <span asp-validation-for="ConfirmationNumber" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="col-lg-3 col-lg-offset-2">
                <button class="btn btn-primary btn-lg col-xs-12" type="submit">
                    SEARCH
                </button>
            </div>
        </fieldset>
    </form>
</div>