@model CarRentalApplication.Models.ViewModels.Reservation.ReservationLogisticsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<form asp-controller=@(Model.FormProcessing.FormController) asp-action=@(Model.FormProcessing.FormAction) asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" id="reservationForm" role="form">
    <fieldset>
        @*<legend style="color:brown">&nbsp; START YOUR RESERVATION NOW</legend>*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group form-group-lg">
            <label class="col-lg-4 control-label">YOUR LOCATION (CITY OR ZIP)</label>
            <div class="col-lg-7 col-lg-offset-1">
                <input asp-for="UserLocation" type="text" class="form-control input-lg search-field" id="userLocation" onfocus="geolocate();" placeholder="Enter a Location" value=@(Model.UserLocation)>
                <span asp-validation-for="UserLocation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-lg-4 control-label">PICKUP LOCATION</label>
            <div class="col-lg-6 col-lg-offset-1">
                <select style="width:100%" class="form-control storeLocation" id="" asp-for="PickupLocation" asp-items="@(new SelectList(Model.StoreLocations))">
                    <option selected="selected" disabled="disabled">Select Pickup Store Location</option>
                </select>
                <span asp-validation-for="PickupLocation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-lg-4 control-label">RETURN LOCATION</label>
            <div class="col-lg-6 col-lg-offset-1">
                <select style="width:100%" class="form-control storeLocation" id="" asp-for="ReturnLocation" asp-items="@(new SelectList(Model.StoreLocations))">
                    <option selected="selected" disabled="disabled">Select Return Store Location</option>
                </select>
                <span asp-validation-for="ReturnLocation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-lg-4 control-label">PICKUP DATE</label>
            <div class="col-lg-6 col-lg-offset-1">
                <input type="text" asp-for="PickupDate" class="form-control input-lg pickupdate" readonly />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-group-lg">
            <label class="col-lg-4 control-label">RETURN DATE</label>
            <div class="col-lg-6 col-lg-offset-1">
                <input type="text" asp-for="ReturnDate" class="form-control input-lg returndate" readonly />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-3 pull-right">
            @if (Model.FormProcessing.FormAction == "LogisticsUpdate")
            {
                <button type="submit" value="VEHICLE SETUP" class="btn btn-primary btn-lg reservation-update-btn">
                    SAVE
                    <span class="glyphicon glyphicon-save"></span>
                </button>
            }
            else
            {
                <button type="submit" value="VEHICLE SETUP" class="btn btn-primary btn-lg">
                    VEHICLE SETUP
                    <span class="glyphicon glyphicon-arrow-right"></span>
                </button>
            }
        </div>
    </fieldset>
</form>
