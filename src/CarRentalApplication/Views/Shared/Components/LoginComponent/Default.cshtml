@using ViewModels = CarRentalApplication.Models.ViewModels
@model Tuple<ViewModels.Auth.LoginViewModel, ViewModels.FormSubmissionViewModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h3 class="pageHeading col-md-offset-2">&nbsp; LOGIN</h3>
<form asp-controller=@(Model.Item2.FormController) asp-action=@(Model.Item2.FormAction) role="form" method="post" class="form-horizontal col-md-7 col-md-offset-2" id="loginform">
    <fieldset clas="col-md-5 col-md-offset-1">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group form-group-lg">
            <label class="col-lg-2 control-label">Email</label>
            <div class="col-lg-5">
                <input type="email" class="input input-lg" placeholder="Enter Email" asp-for=@Model.Item1.Email style="width:100%;" />
                <span asp-validation-for=@Model.Item1.Email class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-group-lg">
            <label class="col-lg-2 control-label">Password</label>
            <div class="col-lg-5">
                <input type="password" class="input input-lg" asp-for=@Model.Item1.Password placeholder="Enter Password" style="width:100%;" />
                <span asp-validation-for=@Model.Item1.Password class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="LOGIN" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </fieldset>
</form>