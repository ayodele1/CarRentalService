@using ViewModels = CarRentalApplication.Models.ViewModels;
@model CarRentalApplication.Models.ViewModels.Auth.LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
    var formSubmission = new ViewModels.FormSubmissionViewModel()
    {
        FormController = "Auth",
        FormAction = "Login"
    };
}

<div class="row">
    <br />
    @await Component.InvokeAsync("LoginComponent", new { lvm = Model, fsvm = formSubmission})
</div>