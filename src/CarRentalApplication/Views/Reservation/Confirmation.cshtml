    <div class="col-md-3">
        <input type="button" class="btn btn-sm" value="MAKE ANOTHER RESERVATION"/>
    </div>
    <div class="col-md-3">
        <input type="button" class="btn btn-sm" value="BACK TO HOME" />
    </div>

    @await Component.InvokeAsync("ReservationReview", new { rvm = Model })
    
</div>